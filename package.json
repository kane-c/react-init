{
  "name": "react-init",
  "version": "1.0.0",
  "description": "Minimal setup for a React project",
  "scripts": {
    "build": "npm run clean; npm run build:client:prod && npm run build:server:prod",
    "build:client:prod": "NODE_ENV=production webpack -p --progress",
    "build:dll": "BUILDING_DLL=true NODE_ENV=developement webpack --progress --config webpack.config.dll.babel.js",
    "build:server": "NODE_ENV=development webpack --progress --config webpack.config.server.babel.js",
    "build:server:prod": "NODE_ENV=production webpack -p --progress --config webpack.config.server.babel.js",
    "clean": "rm -rf build",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint --ignore-path .gitignore **/*.css",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run eslint -- .",
    "lint:staged": "lint-staged",
    "start": "APP_ENV=server npm run build:server && node build/server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "kane-c",
  "license": "MIT",
  "babel": {
    "plugins": [
      "transform-flow-strip-types"
    ],
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements",
          "transform-react-remove-prop-types"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "env": {
      "browser": true
    },
    "parser": "babel-eslint",
    "rules": {
      "max-len": [
        "error",
        79
      ],
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "react/jsx-sort-props": "error",
      "react/sort-prop-types": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ]
    }
  },
  "lint-staged": {
    "*.css": "stylint",
    "*.@(js|jsx)": "lint:eslint"
  },
  "pre-commit": "lint:staged",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "declaration-block-properties-order": "alphabetical",
      "font-family-name-quotes": "always-where-recommended",
      "indentation": 2,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "single"
    }
  },
  "dependencies": {
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.9",
    "babel-polyfill": "^6.13.0",
    "compression": "^1.6.2",
    "css-loader": "^0.23.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "postcss-cssnext": "^2.7.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.4.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-immutable": "^3.0.7",
    "style-loader": "^0.13.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "webpack": "^2.1.0-beta.20"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "eventsource-polyfill": "^0.9.6",
    "flow-bin": "^0.30.0",
    "lint-staged": "^2.0.3",
    "pre-commit": "^1.1.3",
    "react-transform-hmr": "^1.0.4",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-node-externals": "^1.3.3"
  }
}
