{
  "name": "react-init",
  "version": "1.0.0",
  "description": "Minimal setup for a React project",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:client:prod && npm run build:server:prod",
    "build:client:prod": "NODE_ENV=production webpack -p --progress",
    "build:dll": "BUILDING_DLL=true NODE_ENV=developement webpack --progress --config webpack.config.dll.babel.js",
    "build:server": "APP_ENV=server NODE_ENV=development webpack --progress --config webpack.config.server.babel.js",
    "build:server:prod": "APP_ENV=server NODE_ENV=production webpack -p --progress --config webpack.config.server.babel.js",
    "clean": "rm -rf build",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint --ignore-path .gitignore **/*.css",
    "lint:eslint": "eslint --ext=js --ext=jsx --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- .",
    "lint:staged": "lint-staged",
    "prestart": "[ -f build/static/dll.js ] || npm run build:dll; npm run build:server",
    "start": "webpack-dashboard -- node build/server",
    "start:prod": "npm run build:client:prod && npm run build:server:prod && node build/server",
    "storybook": "start-storybook --dont-track -p 8081",
    "pretest": "rm -rf coverage",
    "test": "NODE_ENV=test karma start"
  },
  "author": "kane-c",
  "license": "MIT",
  "private": true,
  "repository": "kane-c/react-init",
  "babel": {
    "plugins": [
      "transform-flow-strip-types"
    ],
    "presets": [
      [
        "latest",
        {
          "modules": false
        }
      ],
      "react",
      "stage-0"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements",
          "transform-react-remove-prop-types"
        ]
      },
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true
    },
    "extends": [
      "airbnb",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "rules": {
      "max-len": [
        "error",
        79
      ],
      "no-shadow": 0,
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "valid-jsdoc": [
        "error",
        {
          "preferType": {
            "Boolean": "Boolean",
            "Number": "Number",
            "object": "Object",
            "String": "String"
          }
        }
      ],
      "react/jsx-sort-props": "error",
      "react/sort-prop-types": "error",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/no-named-as-default": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./webpack.config.babel.js"
        }
      }
    }
  },
  "lint-staged": {
    "*.css": "stylelint",
    "*.@(js|jsx)": "lint:eslint"
  },
  "pre-commit": "lint:staged",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "declaration-block-properties-order": "alphabetical",
      "font-family-name-quotes": "always-where-recommended",
      "indentation": 2,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "single"
    }
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "axios": "^0.14.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.9",
    "babel-polyfill": "^6.13.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "bootstrap": "^4.0.0-alpha.3",
    "compression": "^1.6.2",
    "css-loader": "^0.25.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.6.3",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "postcss-cssnext": "^2.7.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.13.0",
    "postcss-reporter": "^1.4.1",
    "react": "^15.3.0",
    "react-bootstrap": "^0.30.2",
    "react-dom": "^15.3.0",
    "react-fontawesome": "^1.1.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-immutable": "^3.0.7",
    "redux-saga": "^0.11.0",
    "reselect": "^2.5.3",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.20"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.3.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "chai-immutable": "^1.6.0",
    "dirty-chai": "^1.2.2",
    "enzyme": "^2.4.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-flowtype": "^2.11.1",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "eventsource-polyfill": "^0.9.6",
    "flow-bin": "^0.32.0",
    "jsdom": "^9.4.2",
    "karma": "^1.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jsdom-launcher": "^4.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-webpack": "^1.8.0",
    "lint-staged": "^3.0.3",
    "minimist": "^1.2.0",
    "mocha": "^3.0.2",
    "npm-check-updates": "^2.8.0",
    "null-loader": "^0.1.1",
    "pre-commit": "^1.1.3",
    "react-transform-hmr": "^1.0.4",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^13.0.2",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-node-externals": "^1.3.3"
  }
}
